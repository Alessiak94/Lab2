<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab2_SpellChecker" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="21.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Choose the language:" />
                  <ComboBox fx:id="cmbLingua" />
               </children>
            </HBox>
            <TextArea fx:id="txtTesto" />
            <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#doSpellCheck" text="Spell Check" />
            <TextArea fx:id="txtCorrezione" />
            <HBox alignment="TOP_RIGHT" spacing="10.0">
               <children>
                  <Label fx:id="lblErrori">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#doClearText" text="Clear text" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
   </opaqueInsets>
   <bottom>
      <Label fx:id="lblTempo" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
